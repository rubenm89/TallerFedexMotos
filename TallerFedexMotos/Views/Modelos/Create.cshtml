@model TallerFedexMotos.Models.Modelo

@{
    ViewData["Title"] = "Create";
}

<h1>Crear</h1>

<h4>Modelo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="nombreModelo" class="control-label"></label>
                <input asp-for="nombreModelo" class="form-control" />
                <span asp-validation-for="nombreModelo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="marcaId" class="control-label"></label>
                <select asp-for="marcaId" class ="form-control" asp-items="ViewBag.marcaId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Nuevo" class="btn btn-danger" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Atras</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
