@model TallerFedexMotos.Models.Moto

@{
    ViewData["Title"] = "Details";
}

<h1>Detalles</h1>

<div>
    <h4>Moto</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.modelo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.modelo.nombreModelo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.año)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.año)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.imagenMoto)
        </dt>
        <dd class="col-sm-10">
           @* @Html.DisplayFor(model => model.imagenMoto)*@
        @*</dd>
        <dd class="col-sm-10">*@
            @if (!string.IsNullOrEmpty(Model.imagenMoto))
             {
                <img src="~/Imagenes/fotoMotos/@Model.imagenMoto" class="rounded-circle" style="max-width:70px" asp-append-version="true" />
             }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Editar</a> |
    <a asp-action="Index">Atras</a>
</div>
