@model IEnumerable<TallerFedexMotos.Models.Moto>

@{
    ViewData["Title"] = "Index";
}

<h1>Motos</h1>

<p>
    <a asp-action="Create">Crear nuevo</a>
</p>
<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.modelo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.año)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.imagenMoto)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.modelo.nombreModelo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.año)
            </td>
            <td>
                @if (!string.IsNullOrEmpty(item.imagenMoto))
                 {
                   <img src="~/Imagenes/fotoMotos/@item.imagenMoto" class="rounded-circle" style="max-width:70px" asp-append-version="true" />
                 }          
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Borrar</a>
            </td>
        </tr>
}
    </tbody>
</table>

<partial name="_paginador" for="@ViewData["paginador"]" />
